{
  "name": "phone-api-server",
  "version": "1.0.0",
  "description": "A phone-api server with RESTful format",
  "main": "index.js",
  "scripts": {
    "test_t": "jest -t",
    "tsc": "tsc",
    "test": "export NODE_ENV=dev && jest",
    "clearTest": "rm -rf ./build/__tests__",
    "clear": "rm -rf build",
    "watch_ts": "tsc -w",
    "dev_hot_reload": "ts-node-dev --respawn  --transpile-only ./server/server.ts",
    "buildProd": "npm run clear && npm run tsc &&  npm run clearTest",
    "start": "npm run clear && npm run tsc && node ./build/server.js"
  },
  "pre-commit": ["test"],
  "keywords": [],
  "author": "jsonLiang",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "pre-commit": "^1.2.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/koa": "^2.11.6",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "dotenv": "^8.2.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-json": "^2.0.2",
    "koa-router": "^9.4.0",
    "libphonenumber-js": "^1.8.5"
  }
}
